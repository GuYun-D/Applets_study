<!-- 
    text标签相当于span标签
    view相当于div
    checkbox就是复选框
 -->
<text>1</text>
<text>2</text>

<!-- view相当于div -->
<view>3</view>

<!-- 数据绑定 -->
<!-- 字符串 -->
<view>
    {{msg}}
</view>

<!-- 数字 -->
<view>
    {{number}}
</view>

<!-- 布尔 -->
<view>
    {{isOk}}
</view>

<!-- 对象 -->
<view>
    {{person}}
</view>

<view>
    {{person.name}}
</view>

<view>
    {{person.weight}}
</view>

<!-- 在标签的属性中使用 -->
<view data-num="{{number}}">自定义属性</view>

<!-- 复选框 -->
<!-- 
    checked:默认选中，同checked=“true/false”
    字符串和花括号不能存在空格
 -->
<view>
    <checkbox checked></checkbox>
    <checkbox checked="{{isChecked}}"></checkbox>
</view>


<!-- 运算 -->
<!-- 
    可以在花括号中使用表达式

    表达式：简单，运算，数据运算，字符串， 拼接，逻辑运算，三元表达式
    语句：if-else, switch, for ...
 -->
<view>{{1 + 1}}</view>
<view>{{1 + "1"}}</view>
<view>{{10 % 2  === 0 ? "偶数" : "奇数"}}</view>

<!-- 列表循环 -->
<!-- 
    wx:for="{{数组或者对象}}"
 -->
<!-- 
     wx:key="唯一值"为来提高性能
     1.绑定一个普通字符串的时候，这个字符串的名称必须是循环数组中的对象中的唯一属性
     2.wx:key="*this",表示你的数组是一个普通的数组，*this表示循环项
        [1,2,3,4]
  -->
<!-- 
    当出现 数组的嵌套循环的时候 尤其要注意  以下绑定的名称 不要重名
        wx:for-item="item" wx:for-index="index"
    默认情况下 我们 不写
       wx:for-item="item" wx:for-index="index"
       小程序也会把 循环项的名称 和 索引的名称 item 和 index 
       只有一层循环的话 （wx:for-item="item" wx:for-index="index"） 可以省略
 -->

<view>
    <view wx:for="{{list}}" wx:for-item="item" wx:for-index="index" wx:key="id">
        索引：{{index}}
        -----------
        名字：{{item.name}}
    </view>
</view>

<!-- 对象循环 -->
<!-- 
    对象循环
    1 wx:for="{{对象}}" wx:for-item="对象的值"  wx:for-index="对象的属性"
    2 循环对象的时候 最好把 item和index的名称都修改一下
      wx:for-item="value"  wx:for-index="key"
 -->

<view>
    <view>对象循环</view>
    <view wx:for="{{person}}" wx:for-item="value" wx:for-index="key" wx:key="age">
        属性:{{key}}
        -----------
        值:{{value}}
    </view>
</view>